package com.bazotech.store.controllers;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.SessionAttributes;
import org.springframework.web.bind.support.SessionStatus;

import com.bazotech.store.domain.ProductOrder;

import lombok.extern.slf4j.Slf4j;

@Controller
@RequestMapping("/orders")
@SessionAttributes("tacoOrder")
@Slf4j
public class OrderController {
	
	@GetMapping("/current")
	public String orderForm() {
		// logic to populate the model with a list of taco orders to be placed.
		return "orderForm";
	}
	
	@PostMapping
	public String processOrder(ProductOrder order, SessionStatus sessionStatus) {
		log.info("Order submitted: {}", order);
		/* logic to persist the order to the database*/
		sessionStatus.setComplete(); // clears the session of the tacoOrder object
		return "redirect:/";
	}
}
