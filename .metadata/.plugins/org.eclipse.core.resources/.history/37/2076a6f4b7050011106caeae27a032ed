package com.bazotech.store.domain;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.FetchType;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;
import jakarta.validation.constraints.NotBlank;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.EqualsAndHashCode;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

@Builder
@AllArgsConstructor
@NoArgsConstructor
@Entity
@Table(name="business_addresses")
@Getter 
@Setter 
@ToString (exclude = {"merchant", "vendor"})
@EqualsAndHashCode(onlyExplicitlyIncluded = true)
public class BusinessAddress {
    @Id
    @GeneratedValue(strategy=GenerationType.IDENTITY)
    @Column(name="business_address_id")
    @EqualsAndHashCode.Include
    private Long businessAddressId;

    //@NotBlank(message="Street is required")
    @Column(name="street")
    private String street;

    @EqualsAndHashCode.Include
    @NotBlank(message="City is required")
    @Column(name="city")
    private String city;

    @EqualsAndHashCode.Include
    @NotBlank(message="Region is required")
    @Column(name="region")
    private String region;

    @EqualsAndHashCode.Include
    @NotBlank(message="Country is required")
    @Builder.Default
    @Column(name="country")
    private String country = "Uganda";

    @NotBlank(message="Type of address is required")
	@Column(name="address_type")    
    
    @ManyToOne(optional=true)
    @JoinColumn(name="merchant_id")
    private Merchant merchant;

    @ManyToOne(optional=true)
    @JoinColumn(name="vendor_id")
    private Vendor vendor;
    
    /* Address Type Enumeration */
    enum AddressType {
    	
		PRIMARY("Primary"),
		CORRESPONDENCE("Correspondence"),
		
		private String addressType;
    	
    	AddressType(String addressType) {
			this.addressType = addressType;
		}
		
    	/* method to get an address */
		public String getAddressType() {
			return addressType;
		}
		
	}
    
}

