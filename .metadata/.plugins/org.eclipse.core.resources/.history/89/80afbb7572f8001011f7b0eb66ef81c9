package com.bazotech.store.controllers;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Enumeration;
import java.util.Iterator;
import java.util.List;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.ResponseBody;


import com.bazotech.store.domain.ProductProto;

import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

@Controller
public class ProductController {
	
	/* introduce a logger object for this controller class. */
	private static final Logger logger = LoggerFactory.getLogger(ProductController.class);
	
	/* End-point to provide the product Registration Form. */
	@GetMapping("/products/add")
	public String addProduct(Model model){
		
		/* create an instance of the product class. */
		var ProductItem = new ProductProto();
		
		/* Add the item to the model so that the form th:object attribute can bind to it */
		model.addAttribute("productItem", ProductItem);
		
		/* create product categories */
		List<String> itemCategories = List.of("Electronics", "Books", "Clothing", "Home & Kitchen");
		
		/* add the categories to the model */
		model.addAttribute("itemCategories", itemCategories);
		
		/* return the item form */
		return "product_form";
	}
	
	
	
	/* Process Product Information sent from a form whose urlencoding is:application/x-www-urlencoded or multipart/form-data */
	/* In application/x-www-urlencoded, form data comes in key=value&key2=value2 etc pairs */
	/* In multipart/form-data, the request comes with partition form-data with each partition separated from the other using a browser selected boundary. */
	
	/* Knowledge-Point: Since the request is coming in the form application/x- or multipart/form-data, we bind the context of the form to a java object using the @ModelAttribute annotation.*/
	/* Knowledge-Point: The method must have a type that is same as the type the form is bound to.*/
	/* Knowledge-Point: If there is need to save the received form data in the model, then prefix the formal argument with @ModelAttribute */
	/* Knowledge-Point: if the @ModelAttribute annotation has a name associated to it, then the auto created spring instance of the type passed into the method is saved in the model spring abstract with that name.*/
	/* Knowledge-point: If the @ModelAttribute annotation has no name affiliated to it then spring creates an entry in the model abstract with a name same as the class name of the formal argument. The name is saved in camelCase notation. */
	/* Knowledge-Point: The form spring Handler Method simply needs to have as a formal parameter a type that is same as the kind you bound to the form through the th:object thymeleaf operation.*/
	
	/* @ModelAttribute("productItem") */
	
	@PostMapping("/process/productRegistration")
	public String processRegistration(Model model, @ModelAttribute ProductProto form_submittedProduct,HttpServletRequest req,HttpServletResponse res) throws IOException {
		
		/* Approach1: Interacting with the received object via the model abstract.*/
		ProductProto receivedProduct = (ProductProto)model.getAttribute("product");
		
		/* log the name of the received product. */
		logger.info(receivedProduct.getProductName());
	
		/* log name of the received product category. */
		logger.info(receivedProduct.getProductCategory());
		
		/* reading directly from the raw request object */
		logger.info("Name from Raw Req: " + req.getParameter("productCategory"));
		
		
		/* checking all parameters*/
		Enumeration<String> requestParams = req.getParameterNames();
		while(requestParams.hasMoreElements()) {
			logger.info("Identified Parameter: "+ requestParams.nextElement());
		}
		
		/* Approach2: Interacting the with received form through the mapped to product instance. */
		logger.info("Submitted Product Name:" + form_submittedProduct.getProductName());
		
		/* add an item to the spring boot model object. */
		model.addAttribute("submitted_form",form_submittedProduct);
		
		return "frmProcessProduct";
	}
	
	
	
	
	/* KP: If we the request body is formatted as json, then we bind to the request body to a java object using @RequestBody annotation as below.*/
	/* This means map or bind the form fields to the java object derived from the class specified */
	
