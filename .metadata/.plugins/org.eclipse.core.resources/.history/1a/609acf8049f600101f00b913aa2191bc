package com.bazotech.store.domain;

import java.io.Serializable;
import java.time.LocalDateTime;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import org.hibernate.validator.constraints.CreditCardNumber;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinTable;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToMany;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.OneToOne;
import jakarta.persistence.Table;
import jakarta.validation.constraints.NotEmpty;
import jakarta.validation.constraints.NotNull;
import lombok.Data;

@Data
@Entity
@Table(name="product_orders")
public class ProductOrder implements Serializable {
	
	private static final long serialVersionUID = 1L;
	
	@Id
	@GeneratedValue(strategy=GenerationType.AUTO)
	@Column(name="order_id")
	private Long id;
	
	/* time stamp for when the order was placed */
	@Column(name="placed_on")
	private LocalDateTime placedOn = LocalDateTime.now();
	
	/* order status property */
	@Enumerated(EnumType.STRING)
	@Column(name="order_status", nullable=false)
	private OrderStatus status;
	
	@NotNull(message="Delivery Address is required")
	@ManyToOne(cascade= {CascadeType.PERSIST,CascadeType.MERGE})
	@JoinColumn(name="address_id")
	private Address deliveryAddress;
	
	
	
	/* payment information properties*/
	@NotNull(message="Billing information is required")
	@OneToOne(cascade=CascadeType.PERSIST)
	@JoinColumn(name="billing_id", referencedColumnName="billing_id")
	private BillingInfo billingInfo;
	
	
	
	/* ordered items list: This owns the foreign key, controls the relationship productOrder:Product */
	@NotEmpty(message="Order must contain at least one product")
	@ManyToMany
	@JoinTable(name = "ordered_products",joinColumns = @JoinColumn (name = "order_id"),inverseJoinColumns = @JoinColumn(name = "product_id"))
	private List<Product> products = new ArrayList<>();
	
	
	/* method to add product to the order */
	public void addProduct(Product product) {
		this.products.add(product);
	}
	
	/* Embedded enum definition */ 
	public enum OrderStatus { 
		PENDING, PROCESSING, 
		SHIPPED, DELIVERED, 
		CANCELLED 
	}
	
}
