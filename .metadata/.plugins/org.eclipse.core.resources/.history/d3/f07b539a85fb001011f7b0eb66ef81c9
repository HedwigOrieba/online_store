package com.bazotech.store.domain;

import java.util.ArrayList;
import java.util.List;

import jakarta.persistence.Column;
import jakarta.persistence.EmbeddedId;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.MapsId;
import jakarta.persistence.OneToMany;
import jakarta.persistence.Table;
import lombok.Builder;
import lombok.EqualsAndHashCode;
import lombok.Getter;
import lombok.Setter;

@Builder
@Setter
@Getter
@Table(name="store_shelf")
@EqualsAndHashCode(onlyExplicitlyIncluded=true)
@Entity
public class StoreShelf {
	
	@Id
	@GeneratedValue(strategy=GenerationType.IDENTITY)
	@Column(name="shelf_id")
	@EqualsAndHashCode.Include
	private Long shelfId;
	
	
	@ManyToOne
	@JoinColumn(name="rack_id")
	private StoreRack rack;
	
	
	
	@Column(name="rack_label")
	private String rackLabel;
	
	@Builder.Default
	@OneToMany
	List<StoreBin> bins = new ArrayList<>();
	
	/* Helper methods to add & remove items from the storeitems list. */
	public void addBin(StoreBin storebin) {
	    if (!bins.contains(storebin)) {
	        bins.add(storebin);
	        storebin.setShelf(this);
	    }
	}

	public void removeBin(StoreBin storebin) {
		bins.remove(storebin);
		storebin.setShelf(this);
	}
	
	}
	
