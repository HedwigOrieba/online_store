import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.ResponseBody;

import com.bazotech.store.domain.Colors;
import com.bazotech.store.domain.Product;

import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;

@Controller
public class ProductController {
	
	/* End-point to provide the product Registration Form. */
	@GetMapping("/products/add")
	public String addProduct(Model model){
		
		/* create an instance of the product class. */
		var ProductItem = new Product();
		
		/* Add the item to the model so that the form th:object attribute can bind to it */
		model.addAttribute("productItem", ProductItem);
		
		/* create product categories */
		List<String> itemCategories = List.of("Electronics", "Books", "Clothing", "Home & Kitchen");
		
		/* add the categories to the model */
		model.addAttribute("itemCategories", itemCategories);
		
		/* return the item form */
		return "product_form";
	}
	
	
	
	/* Process Product Information sent from a form whose urlencoding is:application/x-www-urlencoded or multipart/form-data */
	/* In application/x-www-urlencoded, form data comes in key=value&key2=value2 etc pairs */
	/* In multipart/form-data, the request comes with partition form-data with each partition separated from the other using a browser selected boundary. */
	/* Knowledge-Point: Since the request is coming in the form application/x- or multipart/form-data, we bind the context of the form to a java object using the @ModelAttribute annotation.*/
