		/* Testing the vendor class */
		var v1 = new Vendor();
		
		var address1 = new BusinessAddress();
		
		address1.setCity("Kampala");
		address1.setCountry("Uganda");
		address1.setVendor(v1);
		address1.setStreet("William Street");
		address1.setRegion("Central");
		
		var address2 = new BusinessAddress();
		
		address2.setCity("Jinja");
		address2.setCountry("Uganda");
		address2.setVendor(v1);
		address2.setStreet("Kyabazinga Road");
		address2.setRegion("Eastern");
		
		List<BusinessAddress> vlist = new ArrayList<>();
		
		vlist.add(address1);
		vlist.add(address2);
		
		v1.setVendorName("Microsoft");
		v1.setVendorDescription("US Software Company");
		v1.setBusinessAddresses(vlist);
		
		/* Display first vendor */
		System.out.println("vendor1: "+ v1.toString());
		
		
		var v2 = Vendor.builder()
							  .vendorName("Oracle Corporation")
							  .vendorDescription("The strongest software company")
							  .build();
		
		
		var bizz = List.of( BusinessAddress.builder()
														.city("Washington")
														.country("United States of America")
														.street("Glass ware")
														.build(),
														
										BusinessAddress.builder()
														.city("Kampala")
														.country("Uganda")
														.street("Wilson Street")
														.build(),
														
										BusinessAddress.builder()
														.city("Lagos")
														.country("Nigeria")
														.street("Elegu Street")
														.build()
										);
								
			v2.setBusinessAddresses(bizz);
							  
			System.out.println("vendor2: "+ v2.toString());
		
		
		
	}// end main method.

