package com.bazotech.store.domain;

import java.util.ArrayList;
import java.util.List;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.OneToMany;
import jakarta.persistence.PrePersist;
import jakarta.persistence.Table;
import lombok.Builder;
import lombok.EqualsAndHashCode;
import lombok.Getter;
import lombok.Setter;

@Builder
@Setter
@Getter
@EqualsAndHashCode(onlyExplicitlyIncluded=true)
@Table(name="store_racks")
@Entity
public class StoreRack {
	
	@Id
	@GeneratedValue(strategy=GenerationType.IDENTITY)
	@EqualsAndHashCode.Include
	@Column(name="rack_id")
	private Long rackId;
	
	/* Relationship to allocated store */
	@ManyToOne
	@JoinColumn(name="store_id")
	private Store store;
	
	
	@Column(name="shelf_count")
	private Integer shelfCount;
	
	
	@Column(name="bin_count")
	private Integer binCount;
	
	
	@Enumerated(EnumType.STRING)
	@Column(name="store_rack_mapping_status")
	private BindingStatus storeRackMappingStatus;
	
	@PrePersist
	protected void defaultRackStoreBinding() {
		if( storeRackMappingStatus == null) {
			storeRackMappingStatus = BindingStatus.UNMAPPED;
		}
	}
	
	/* relationship to store_rsb_mapping */
	@Builder.Default
	@OneToMany(mappedBy="storageRack", cascade=CascadeType.ALL, orphanRemoval=true)
	List<StoreRsbMapping> storeRsbMappings = new ArrayList<>();
	
	// helper method to add a rsb 
	public void addRsb(StoreRsbMapping rsb) {
		if(!storeRsbMappings.contains(rsb)) {
			storeRsbMappings.add(rsb);
			rsb.setStorageRack(this);
		}
	}
	
	// helper method to remove an rsb
	public void removeRsb(StoreRsbMapping rsb) {
		storeRsbMappings.remove(rsb);
		rsb.setStorageRack(null);
	}
	
	
	public enum BindingStatus{
		MAPPED("Mapped"),
		UNMAPPED("Unmapped");
		
		private String mappingStatus;
		
		BindingStatus(String mappingStatus){
			this.mappingStatus = mappingStatus;
		}
		
		public String getRackMappingStatus() {
			return this.mappingStatus;
		}
	}
	
}
