package com.bazotech.store.domain;

import java.time.LocalDateTime;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.Table;
import jakarta.validation.constraints.NotNull;
import lombok.Data;

@Table(name="stores")
@Entity
@Data
public class Store {
	
	@NotNull
	@Id
	@GeneratedValue(strategy=GenerationType.AUTO)
	@Column(name="store_id")
	private Long storeId;
	
	
	@Column(name="item_id")
	private Long itemId;
	
	@Column(name="tag_id")
	private Long tagId;
	
	@Column(name="price_id")
	private Long priceId;
	
	@Column(name="store_name")
	private String storeName;
	
	@Column(name="store_location")
	private String storeLocation;
	
	@Column(name="store_description")
	private String storeDescription;
	
	@Column(name="items_in_stock")
	private Integer itemsInStock;
	
	@Column(name="item_reorder_level")
	private Integer itemReorderLevel;
	
	@Column(name="item_posting_on")
	private LocalDateTime itemPostingDate = LocalDateTime.now();
	
}
