package com.bazotech.store.domain;

import java.io.Serializable;
import java.util.Objects;
import jakarta.persistence.Embeddable;

@Embeddable
public class StoreItemId implements Serializable {

	private static final long serialVersionUID = 1L;
	
	private Long storeId;
    private Long itemId;

    public StoreItemId() {}

    public StoreItemId(Long storeId, Long itemId) {
        this.storeId = storeId;
        this.itemId = itemId;
    }

    public Long getStoreId() { return storeId; }
    public void setStoreId(Long storeId) { this.storeId = storeId; }

    public Long getItemId() { return itemId; }
    public void setItemId(Long itemId) { this.itemId = itemId; }

    @Override
    public boolean equals(Object o) {
        if (this == o) return true;
        if (!(o instanceof StoreItemId)) return false;
        StoreItemId that = (StoreItemId) o;
        return Objects.equals(storeId, that.storeId) &&
               Objects.equals(itemId, that.itemId);
    }

    @Override
    public int hashCode() {
        return Objects.hash(storeId, itemId);
    }
}

