package com.bazotech.store.domain;

import java.util.ArrayList;
import java.util.List;

import jakarta.persistence.CascadeType;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.OneToMany;
import jakarta.persistence.Table;
import lombok.EqualsAndHashCode;
import lombok.Getter;
import lombok.Setter;
import lombok.ToString;

@Table(name="vendors")
@Entity
@Setter
@Getter
@ToString(exclude = {"businessAddresses"})
@EqualsAndHashCode(onlyExplicitlyIncluded = true)
public class Vendor {
	
	@GeneratedValue(strategy = GenerationType.AUTO)
	@Id
	@EqualsAndHashCode.Include
	@Column(name="vendor_id")
	private Long vendorId;
	
	@OneToMany(mappedBy="vendor", cascade=CascadeType.ALL, orphanRemoval=true)
	private List<BusinessAddress> businessAddresses = new ArrayList<>();
	
	/* helper methods for businessAddresses */ 
	public void addBusinessAddress(BusinessAddress address) { 
		if (!businessAddresses.contains(address)) {
			businessAddresses.add(address); 
			address.setVendor(this); 
		} 
	} 
	
	public void removeBusinessAddress(BusinessAddress address) { 
		businessAddresses.remove(address); 
		address.setVendor(null);
	}
	/* end helper method */

	@Column(name="vendor_name")
	private String vendorName;
	
	@Column(name="vendor_description")
	private String vendorDescription;
	
}
