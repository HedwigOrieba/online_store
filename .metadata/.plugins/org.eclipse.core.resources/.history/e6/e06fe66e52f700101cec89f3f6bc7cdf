package com.bazotech.store.domain;

import java.time.LocalDateTime;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.JoinTable;
import jakarta.persistence.ManyToMany;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;
import jakarta.validation.Valid;
import jakarta.validation.constraints.DecimalMin;
import jakarta.validation.constraints.NotEmpty;
import jakarta.validation.constraints.NotNull;
import jakarta.validation.constraints.Size;
import lombok.Data;
import lombok.Getter;
import lombok.Setter;

@Table(name="products")
@Data
@Entity
public class Product {
	
	/* unique identifier for the product item. */
	@Id
	@GeneratedValue(strategy=GenerationType.AUTO)
	@Column(name="id")
	private Long id;
	
	
	/* Product Date of Creation */
	@Column(name="created_at")
	private LocalDateTime createdAt = LocalDateTime.now();
	
	
	/* Product Name */
	@NotNull
	@Size(min=5,message="Name must be atleast five characters long.")
	@Column(name="product_name")
	private String name;
	
	
	/* Product Description */
	@NotNull(message="Description is required.")
	@Column(name="product_description")
	private String description;
	
	
	/* Product Price */
	@NotNull(message="Price is required.")
	@DecimalMin(value="0.0", inclusive=false, message="Price must be greater than zero.")
	@Column(name="product_price")
	private Double price;
	
	
	
	/* product -> Parts Relationship */
	@Valid
	@Size(min=1, message="You must choose at least one part.")
	@NotEmpty(message="You must choose at least one part.")
	@ManyToMany
	@JoinTable(name="product_to_parts", joinColumns=@JoinColumn(name="product_id"), inverseJoinColumns=@JoinColumn(name="part_id"))
	private List<Part> parts = new ArrayList<>();
	
	
	/* A method to add products to a list.*/
	public void addPart(Part part) {
		this.parts.add(part);
		part.getProducts().add(this);
	}
	
	
	
	/* Product -> Order Relationship is managed by the products field in the ProductsOrders entity */
	@ManyToMany(mappedBy="products")
	private List<ProductOrder> orders = new ArrayList<>();
	
	
	
	/* Helper method to add an order to the orders list */
	public void addOrder(ProductOrder order) {
	    this.orders.add(order);
	    order.getProducts().add(this); // keeps both sides in sync
	}

	
}
